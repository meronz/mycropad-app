{
  "executable": "Mycropad.App",
  "splashscreen": {
    "imageFile": ""
  },
  "name": "Mycropad",
  "author": "Salvatore Merone (meronz)",
  "singleInstance": true,
  "environment": "Production",
  "build": {
    "appId": "com.Mycropad.App.app",
    "productName": "Mycropad",
    "copyright": "Copyright Â© 2020",
    "buildVersion": "1.0.0",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [
          "**/*"
        ]
      },
      "**/*"
    ]
  }
}