<div class="flex flex-col h-full">
    <div>
        <span>@Message</span>
        <button 
            @onclick="Yes"
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
            Yes
        </button>
        <button 
            @onclick="No"
            class="bg-transparent hover:bg-blue-700 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded-full">
            No
        </button>
    </div>
</div>

@code {
    [CascadingParameter] public IModalService Modal { get; set; }
    [CascadingParameter] BlazoredModalInstance ModalInstance { get; set; }
    [Parameter] public string Message { get; set; }

    async Task Yes() => await ModalInstance.CloseAsync(ModalResult.Ok(true));
    async Task No() => await ModalInstance.CancelAsync();
}